<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pictrueActivity">

    <ImageView
        android:id="@+id/pic"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btn_load_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="加载有效url"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/pic"
        />

    <Button
        android:id="@+id/btn_load_fail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="加载无效url"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_load_success"
        />

    <Button
        android:id="@+id/btn_rounded_corners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="加载圆角图片"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/btn_load_fail"
        />

</androidx.constraintlayout.widget.ConstraintLayout>